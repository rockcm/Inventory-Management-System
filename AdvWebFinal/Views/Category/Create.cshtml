@model AdvWebFinal.Models.Entities.Category

@{
    ViewData["Title"] = "Create";
}
<div class="card">
    <h1 class="card-header">Create Category</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="formCreateCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label card-title"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>


<div>
    <a asp-action="Index" asp-controller="Category">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/categoryCreate.js" type="module" defer></script>
}
