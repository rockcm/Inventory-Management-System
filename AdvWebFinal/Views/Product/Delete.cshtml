@model AdvWebFinal.Models.Entities.Product

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4 id="productHeading">Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id:
        </dt>
        <dd class="col-sm-10" id="productId">

        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10" id="Description">

        </dd>
        <dt class="col-sm-2">
            PurchasePrice
        </dt>
        <dd class="col-sm-10" id="PurchasePrice">

        </dd>
        <dt class="col-sm-2">
            SellPrice
        </dt>
        <dd class="col-sm-10" id="SellPrice">

        </dd>
        <dt class="col-sm-2">
            Stock
        </dt>
        <dd class="col-sm-10" id="Stock">

        </dd>
        <dt class="col-sm-2">
            Image:
        </dt>
        <dd class="col-sm-10" id="Image">

        </dd>
    </dl>

    <form asp-action="Delete" id="formProductDelete">
        <input id="Id" name="Id" value="" type="hidden" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-controller="product">Back to List</a>
    </form>
</div>


@section Scripts {
    <script src="~/js/productDelete.js" type="module" defer></script>
}