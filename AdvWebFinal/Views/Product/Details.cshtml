@model AdvWebFinal.Models.Entities.Product

@{
    ViewData["Title"] = "Details";
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h1.display-4 {
        font-size: 2.5rem;
        color: #343a40;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
    }

    .card-header {
        background-color: #007bff;
        color: white;
        font-size: 1.5rem;
        font-weight: bold;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .card-body {
        padding: 1.5rem;
    }

        .card-body dt {
            font-weight: bold;
        }

        .card-body dd {
            margin-bottom: 0.5rem;
        }

    .btn {
        margin-right: 1rem;
        transition: background-color 0.3s, color 0.3s;
    }

        .btn:hover {
            background-color: #0056b3;
            color: #fff;
        }

    .btn-warning:hover {
        background-color: #e0a800;
        color: #fff;
    }

    .btn-success:hover {
        background-color: #218838;
        color: #fff;
    }

    .btn-danger:hover {
        background-color: #c82333;
        color: #fff;
    }

    .details-actions {
        margin-top: 2rem;
        text-align: center;
    }
</style>

<h1 class="display-4">Details</h1>

<div class="card">

<div class="coontainer">
    <h4 class="card-header">@Model.Name</h4>
    <hr />
   
        <div class="card-body">
    <dl class="row">
        <dt class="col-sm-2">
            Id:
        </dt>
        <dd class="col-sm-10" id="productId">
           
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10" id="Name">
          
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10" id="Description">
            
        </dd>
        <dt class="col-sm-2">
            Purchase Price
        </dt>
        <dd class="col-sm-10" id="PurchasePrice">
           $
        </dd>
        <dt class="col-sm-2">
            Sell Price
        </dt>
        <dd class="col-sm-10" id="SellPrice">
           $
        </dd>
        <dt class="col-sm-2">
            Stock
        </dt>
        <dd class="col-sm-10" id="Stock">
           
        </dd>
       
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10" id="Category">
            @foreach (var category in Model.ProductCategory)
            {
                <span>@category.Category.Name</span>

                <br />
            }
        </dd>
                <dt class="col-sm-2">
                    Image
                </dt>
                <dd class="col-sm-10" id="Image">

                    <img src="@Model.Image" alt="Product Image" style="max-width: 100px;" />
                </dd>
                
    </dl>

</div>
</div>
</div>


<div>
    @Html.ActionLink("Edit", "Update", new { id = Model.Id } ) |
    <a asp-action="Index" asp-controller="Product">Back to List</a> |
    <a asp-action="AddCategory" asp-controller="Category" asp-route-id="@Model!.Id">Add Category</a> |
     <a asp-action="DetailsPlus" asp-controller="Product"
                           asp-route-Id="@Model!.Id" >Remove a category</a>
</div>

@section Scripts {
    <script src="~/js/productDetails.js" type="module" defer></script>
}
