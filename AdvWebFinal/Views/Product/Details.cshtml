@model AdvWebFinal.Models.Entities.Product

@{
    ViewData["Title"] = "Details";
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<h1 class="display-4">Details</h1>



<div class="coontainer">
    <h4 class="card-title">Product</h4>
    <hr />
    <div class="card">
        <div class="card-body">
    <dl class="row">
        <dt class="col-sm-2">
            Id:
        </dt>
        <dd class="col-sm-10" id="productId">
           
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10" id="Name">
          
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10" id="Description">
            
        </dd>
        <dt class="col-sm-2">
            Purchase Price
        </dt>
        <dd class="col-sm-10" id="PurchasePrice">
           
        </dd>
        <dt class="col-sm-2">
            Sell Price
        </dt>
        <dd class="col-sm-10" id="SellPrice">
           
        </dd>
        <dt class="col-sm-2">
            Stock
        </dt>
        <dd class="col-sm-10" id="Stock">
           
        </dd>
       
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10" id="Category">
            @foreach (var category in Model.ProductCategory)
            {
                <span>@category.Category.Name</span>

                <br />
            }
        </dd>
                <dt class="col-sm-2">
                    Image
                </dt>
                <dd class="col-sm-10" id="Image">

                    <img src="@Model.Image" alt="Product Image" style="max-width: 100px;" />
                </dd>
    </dl>
</div>
</div>
</div>


<div>
    @Html.ActionLink("Edit", "Update", new { id = Model.Id } ) |
    <a asp-action="Index" asp-controller="Product">Back to List</a> |
    <a asp-action="AddCategory" asp-controller="Category" asp-route-id="@Model!.Id">Add Category</a> |
     <a asp-action="DetailsPlus" asp-controller="Product"
                           asp-route-Id="@Model!.Id" >Remove a category</a>
</div>

@section Scripts {
    <script src="~/js/productDetails.js" type="module" defer></script>
}
