@model IEnumerable<AdvWebFinal.Models.Entities.Product>

@{
    ViewData["Title"] = "Index";

    var random = new Random();
    var shuffledItems = Model.OrderBy(x => random.Next()).Take(3);
}

<h1>Welcome to Our My Inventory Management System</h1>
<h4>Here you can select a page to visit</h4>
<p>
    <a asp-action="Index" asp-controller="Product" class="btn btn-success">View Products</a>
    <a asp-action="Create" asp-controller="Product" class="btn btn-success">Create New Product</a>
    <a asp-action="Index" asp-controller="Category" class="btn btn-primary">View Categories</a>
    <a asp-action="Create" asp-controller="Category" class="btn btn-primary">Create New Category</a>
    <a asp-action="Search" asp-controller="Product" class="btn btn-warning ">Search Product</a>
</p>


<h2 class="h2">Featured Products</h2>

<div class="container">
    <div class="row">
        @foreach (var item in shuffledItems.Take(3))
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@item.Image" class="card-img-top" alt="Product Image">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">ID: @item.Id</li>
                        <li class="list-group-item">Sell Price: $@item.SellPrice</li>
                        <li class="list-group-item">Purchase Price: $@item.PurchasePrice</li>
                        <li class="list-group-item">Stock: @item.Stock</li>
                    </ul>
                    <div class="card-body">
                        <a asp-controller="Product" asp-action="Update" asp-route-id="@item.Id" class="card-link">Edit</a>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id" class="card-link">Details</a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="card-link">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


