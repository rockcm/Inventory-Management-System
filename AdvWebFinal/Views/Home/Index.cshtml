@{
    ViewData["Title"] = "Home";
}

<div class="container text-center mt-5">
    <h1>Welcome to Our Product Management System</h1>
    <p class="lead">This is a simple product management system where you can add, view, edit, and delete products.</p>
    <p>Click below to get started:</p>
    <div class="btn-group mt-4" role="group">
        <a asp-action="Index" asp-controller="Product" class="btn btn-primary btn-lg">View Products</a>
    </div>

    <div class="btn-group mt-4" role="group">
        <a asp-action="Index" asp-controller="Category" class="btn btn-success btn-lg">View All Categories</a>
    </div>

    <div class="btn-group mt-4" role="group">
        <a asp-action="Create" asp-controller="Product" class="btn btn-success btn-lg">Add New Product</a>
    </div>
</div>


<div class="container mt-5">
    <h2 class="text-center">Featured Products</h2>
    <div class="table-responsive">
       
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Sell Price</th>
                    <th>Purchase Price</th>
                    <th>Stock</th>
                    <th>Image</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>$@item.SellPrice</td>
                        <td>$@item.PurchasePrice</td>
                        <td>@item.Stock</td>
                        <td>
                            <img src="@item.Image" alt="Product Image" style="max-width: 100px; max-height: 100px;" />
                        </td>
                        <td>
                            <a asp-action="Details" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    /* Additional styling */
    body {
        background-color: #f8f9fa; /* Light gray background */
    }

    .container {
        background-color: #fff; /* White background */
        border-radius: 10px;
        box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1); /* Soft shadow effect */
        padding: 20px;
        margin-bottom: 20px;
    }

    h1,
    h2 {
        color: #333; /* Dark gray text color */
    }

    .btn {
        border-radius: 5px;
    }

    table {
        background-color: #fff; /* White background for table */
    }
</style>
